<%= form_with(model: transaction, local: true, html: { class: 'form-horizontal', data: { controller: 'form', action: 'submit->form#submit' } }) do |form| %>
  <% if @return_to.present? %>
    <%= hidden_field_tag :return_to, @return_to %>
  <% end %>
  <% category_input_id = "#{form.object_name}_category_id" %>
  <div class="mb-3" data-controller="select-filter">
    <div class="form-floating">
      <input type="text" class="form-control" placeholder="Category" id="<%= category_input_id %>" data-select-filter-target="input" data-action="input->select-filter#filter keydown->select-filter#handleKeydown focus->select-filter#openDropdown blur->select-filter#closeDropdown" />
      <%= form.collection_select :category_id, @categories, :id, :name, { include_blank: true }, { class: 'form-select d-none', id: "#{category_input_id}_select", data: { select_filter_target: "select", action: "change->select-filter#syncInput" } } %>
      <%= form.label :category_id, "Category", for: category_input_id %>
    </div>
  </div>

  <div class="form-floating mb-3">
    <%= form.text_field :date, class: "form-control", placeholder: "Date", data: { controller: "datepicker", datepicker_type_value: "day" } %>
    <%= form.label :date, "Date" %>
  </div>

  <div class="form-floating mb-3">
    <%= form.text_field :description, class: 'form-control', placeholder: "Description" %>
    <%= form.label :description, "Description" %>
  </div>

  <div class="input-group mb-3">
    <span class="input-group-text">$</span>
    <div class="form-floating">
      <%= form.text_field :amount_dollars, class: 'form-control', placeholder: "Amount", data: { type: 'number', controller: 'number-input', action: 'blur->number-input#format' } %>
      <%= form.label :amount_dollars, "Amount" %>
    </div>
  </div>

  <div class="text-end">
    <% if @return_to.present? %>
      <%= link_to @return_to, class: "btn btn-secondary" do %>
        <i class="bi bi-arrow-left"></i> Back
      <% end %>
    <% else %>
      <button type="button" class="btn btn-secondary" onclick="history.back()">
        <i class="bi bi-arrow-left"></i> Back
      </button>
    <% end %>
    <button type="submit" class="btn btn-primary">
      <i class="bi bi-check-lg"></i> <%= transaction.persisted? ? "Update" : "Create" %>
    </button>
  </div>
<% end %>
