<%= turbo_stream.replace "import_preview" do %>
  <div>
    <%= form_with url: import_transactions_path, local: true do |form| %>
      <%= hidden_field_tag :import_service, @import_service_name %>
      <% if @preview_data[:new_categories].present? %>
        <div class="alert alert-info mb-3">
          <h5 class="alert-heading"><i class="bi bi-info-circle me-2"></i>Expense Categories to Create</h5>
          <div class="d-flex flex-wrap gap-2">
            <% @preview_data[:new_categories].each do |category| %>
              <span class="badge bg-primary"><%= category.name %></span>
            <% end %>
          </div>
        </div>
      <% end %>

      <div class="mb-4">
        <% @preview_data[:items].group_by { |t| t[:date].beginning_of_month }.each_with_index do |(month, transactions_by_month), month_index| %>
          <div class="d-flex justify-content-between align-items-center mb-2 mt-4">
            <h5 class="m-0">Transactions for <%= month.strftime("%B %Y") %></h5>
            <div class="btn-group btn-group-sm">
              <button type="button" class="btn btn-outline-secondary" onclick="toggleSelectAll('<%= month_index %>', true)">Select All</button>
              <button type="button" class="btn btn-outline-secondary" onclick="toggleSelectAll('<%= month_index %>', false)">Select None</button>
            </div>
          </div>
          <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle">
              <thead class="table-light">
                <tr>
                  <th class="text-center" style="width: 50px;">Select</th>
                  <th>Date</th>
                  <th>Description</th>
                  <th>Amount</th>
                  <th>Category</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody id="transactions-<%= month_index %>">
                <% transactions_by_month.each_with_index do |transaction, transaction_index| %>
                  <tr>
                    <td class="text-center">
                      <%= check_box_tag "selected_transactions[]", transaction.to_json, transaction[:status] == :new, class: "transaction-checkbox form-check-input" %>
                    </td>
                    <td><%= transaction[:date].strftime("%d %B %Y") %></td>
                    <td><%= transaction[:description] %></td>
                    <td><%= number_to_currency(transaction[:amount] / 100.0) %></td>
                  <td>
                    <% category_input_id = "transaction_category_#{transaction[:unique_id]}" %>
                    <div data-controller="select-filter">
                      <input type="text" class="form-control form-control-sm mb-1" placeholder="Category" id="<%= category_input_id %>" data-select-filter-target="input" data-action="input->select-filter#filter keydown->select-filter#handleKeydown focus->select-filter#openDropdown blur->select-filter#closeDropdown" />
                      <%= select_tag category_input_id,
                        options_for_select(@categories.map { |c| ["#{c.name}#{c.new_record? ? ' (new)' : ''}", c.name] }, transaction[:category].name),
                        id: "#{category_input_id}_select", class: "form-select form-select-sm d-none", data: { select_filter_target: "select", action: "change->select-filter#syncInput" } %>
                    </div>
                  </td>
                    <td>
                      <span class="badge <%= status_class(transaction[:status]) %>">
                        <%= transaction[:status].to_s.humanize %>
                      </span>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% end %>
      </div>

      <div class="text-end">
        <%= button_tag type: 'submit', class: "btn btn-success" do %>
          <i class="bi bi-check-lg me-1"></i> Import Selected
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>