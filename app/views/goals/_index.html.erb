<div class="mb-4">
  <div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h5 class="card-title m-0">Goals</h5>
      <% unless dashboard %>
        <%= link_to new_goal_path, class: 'btn btn-primary btn-sm' do %>
          <i class="bi bi-plus-lg me-1"></i>Add New Goal
        <% end %>
      <% end %>
    </div>
    <div class="card-body p-0">
      <% if @goals.empty? %>
        <div id="empty-state" class="text-center py-5">
          <h3 class="text-muted">No goals found</h3>
        </div>
      <% else %>
        <div class="table-responsive">
          <table class="table table-bordered table-hover align-middle mb-0">
      <thead>
        <tr class="text-center">
          <th>Goal Name</th>
          <th>Category</th>
          <th>Goal Amount</th>
          <th>Total Contributed</th>
          <th>Amount Left</th>
          <th class="text-center">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if @active_goals.any? %>
          <tr class="table-light no-hover-highlight"><td colspan="6" class="fw-bold text-uppercase text-muted ps-3">Active Goals</td></tr>
          <% @active_goals.each do |goal| %>
            <tr data-controller="clickable-row" data-clickable-row-url-value="<%= goal_path(goal) %>" data-action="click->clickable-row#click" style="cursor: pointer;">
              <td>
                <div class="d-flex justify-content-between align-items-center mb-1">
                  <span><%= goal.goal_name %></span>
                  <% if goal.complete? %>
                    <small class="text-success">100%</small>
                  <% else %>
                    <small class="text-muted"><%= number_to_percentage(goal.percent_complete, precision: 1) %></small>
                  <% end %>
                </div>
                <div class="progress" style="height: 6px;">
                  <div class="progress-bar <%= goal.complete? ? 'bg-success' : '' %>" role="progressbar" style="width: <%= goal.percent_complete %>%; background-color: <%= goal.complete? ? '' : 'rgba(25, 135, 84, 0.5)' %>;" aria-valuenow="<%= goal.percent_complete %>" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
              </td>
              <td class="no-row-click">
                <%= link_to category_path(goal.category), class: "text-decoration-none" do %>
                  <span class="badge rounded-pill bg-light text-dark border px-3 py-2 shadow-sm">
                    <i class="bi bi-tag-fill me-2 text-success"></i><%= goal.category.name %>
                  </span>
                <% end %>
              </td>
              <td><%= number_to_currency(goal.amount_dollars) %></td>
              <td><%= number_to_currency(goal.total_contributed_dollars) %></td>
              <td><%= number_to_currency(goal.amount_left_dollars) %></td>
              <td class="no-row-click">
                <%= link_to edit_goal_path(goal), class: 'btn btn-warning btn-sm', title: 'Edit', data: { controller: 'tooltip', bs_toggle: 'tooltip' } do %>
                  <i class="bi bi-pencil"></i>
                <% end %>
                <%= link_to goal_path(goal), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?', controller: 'tooltip', bs_toggle: 'tooltip' }, class: 'btn btn-danger btn-sm', title: 'Delete' do %>
                  <i class="bi bi-trash"></i>
                <% end %>
                <%= link_to new_transaction_path({category_id: goal.category, description: "Contribution to #{goal.goal_name} goal"}), class: 'btn btn-success btn-sm', title: 'Add Contribution', data: { controller: 'tooltip', bs_toggle: 'tooltip' } do %>
                  <i class="bi bi-plus-lg"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        <% end %>

        <% if @archived_goals.any? %>
          <tr class="table-light no-hover-highlight"><td colspan="6" class="fw-bold text-uppercase text-muted ps-3">Archived Goals</td></tr>
          <% @archived_goals.each do |goal| %>
            <tr data-controller="clickable-row" data-clickable-row-url-value="<%= goal_path(goal) %>" data-action="click->clickable-row#click" style="cursor: pointer;">
              <td>
                <div class="d-flex justify-content-between align-items-center mb-1">
                  <span><%= goal.goal_name %></span>
                  <small class="text-muted"><%= number_to_percentage(goal.percent_complete, precision: 1) %></small>
                </div>
                <div class="progress" style="height: 6px;">
                  <div class="progress-bar" role="progressbar" style="width: <%= goal.percent_complete %>%; background-color: rgba(25, 135, 84, 0.5);" aria-valuenow="<%= goal.percent_complete %>" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
              </td>
              <td class="no-row-click">
                <%= link_to category_path(goal.category), class: "text-decoration-none" do %>
                  <span class="badge rounded-pill bg-light text-dark border px-3 py-2 shadow-sm">
                    <i class="bi bi-tag-fill me-2 text-success"></i><%= goal.category.name %>
                  </span>
                <% end %>
              </td>
              <td><%= number_to_currency(goal.amount_dollars) %></td>
              <td><%= number_to_currency(goal.total_contributed_dollars) %></td>
              <td><%= number_to_currency(goal.amount_left_dollars) %></td>
              <td class="no-row-click">
                <%= link_to edit_goal_path(goal), class: 'btn btn-warning btn-sm', title: 'Edit', data: { controller: 'tooltip', bs_toggle: 'tooltip' } do %>
                  <i class="bi bi-pencil"></i>
                <% end %>
                <%= link_to goal_path(goal), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?', controller: 'tooltip', bs_toggle: 'tooltip' }, class: 'btn btn-danger btn-sm', title: 'Delete' do %>
                  <i class="bi bi-trash"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
    </div>
  <% end %>
    </div>
  </div>
</div>
