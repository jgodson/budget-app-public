<%= form_with(model: category, local: true, html: { class: 'form-horizontal' }) do |form| %>
  <div class="form-floating mb-3">
    <%= form.text_field :name, class: 'form-control', placeholder: "Name" %>
    <%= form.label :name, "Name" %>
  </div>

  <% parent_input_id = "#{form.object_name}_parent_category_id" %>
  <div class="mb-3" data-controller="select-filter">
    <div class="form-floating">
      <input type="text" class="form-control" placeholder="Parent Category" id="<%= parent_input_id %>" data-select-filter-target="input" data-action="input->select-filter#filter keydown->select-filter#handleKeydown focus->select-filter#openDropdown blur->select-filter#closeDropdown" />
      <%= form.collection_select :parent_category_id, @parent_categories, :id, :name, { include_blank: true }, { class: 'form-select d-none', id: "#{parent_input_id}_select", data: { select_filter_target: "select", action: "change->select-filter#syncInput" } } %>
      <%= form.label :parent_category_id, "Parent Category", for: parent_input_id %>
    </div>
  </div>

  <div class="form-floating mb-3">
    <%= form.select :category_type, Category.category_types.keys.map { |type| [type.humanize, type] }, {}, { class: 'form-select', placeholder: "Category Type" } %>
    <%= form.label :category_type, "Category Type" %>
  </div>

  <div class="form-group text-end">
    <button type="button" class="btn btn-secondary" onclick="history.back()">
      <i class="bi bi-arrow-left me-1"></i>Back
    </button>
    <%= form.button class: 'btn btn-primary' do %>
      <i class="bi bi-check-lg me-1"></i><%= category.persisted? ? "Update" : "Create" %>
    <% end %>
  </div>
<% end %>