<%= form_with(model: category, local: true, html: { class: 'form-horizontal' }) do |form| %>
  <div class="form-group mb-3">
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :parent_category_id, "Parent Category", class: 'form-label' %>
    <%= form.collection_select :parent_category_id, @parent_categories, :id, :name, { include_blank: true }, { class: 'form-control' } %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :category_type, class: 'form-label' %>
    <%= form.select :category_type, Category.category_types.keys.map { |type| [type.humanize, type] }, {}, { class: 'form-control' } %>
  </div>

  <div class="form-group text-end">
    <button class="btn btn-secondary" onclick="history.back()">Back</button>
    <%= form.submit(category.persisted? ? "Update" : "Create", class: 'btn btn-primary') %>
  </div>
<% end %>