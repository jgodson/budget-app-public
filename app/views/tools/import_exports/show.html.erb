<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="h3 mb-1">Data Portability</h1>
    <p class="text-muted mb-0">Export or import workspace data using this app's package format.</p>
  </div>
</div>

<div class="row g-4">
  <div class="col-lg-6">
    <div class="card h-100">
      <div class="card-header">Export Data</div>
      <div class="card-body d-flex flex-column">
        <p class="text-muted">Download a compressed package containing categories, transactions, budgets, goals, loans, and loan payments.</p>
        <div class="mt-auto text-end">
          <%= button_to "Download Export Package",
                        tools_import_export_export_path,
                        method: :post,
                        class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-6">
    <div class="card h-100 border-warning-subtle">
      <div class="card-header bg-warning-subtle">Import Data (Replace)</div>
      <div class="card-body d-flex flex-column">
        <p class="text-muted">
          Upload a `.json` or `.json.gz` package generated by this app.
          Import is synchronous and <strong>replaces existing workspace data</strong>.
        </p>

        <%= form_with url: tools_import_export_import_path, method: :post, multipart: true, local: true, class: "d-flex flex-column flex-grow-1" do |form| %>
          <div class="mb-3">
            <%= form.label :package, "Package file", class: "form-label" %>
            <%= form.file_field :package,
                                class: "form-control",
                                required: true,
                                accept: ".json,.gz,.json.gz,application/json,application/gzip" %>
          </div>
          <div class="mt-auto text-end">
            <%= form.submit "Import Package", class: "btn btn-warning" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
