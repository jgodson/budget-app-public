<%= form_with model: @loan, local: true, html: { class: 'form-horizontal', data: { controller: 'form', action: 'submit->form#submit' } } do |form| %>
  <div class="form-floating mb-3">
    <%= form.text_field :loan_name, class: "form-control", placeholder: "Loan Name" %>
    <%= form.label :loan_name, "Loan Name" %>
  </div>

  <% category_input_id = "#{form.object_name}_category_id" %>
  <div class="mb-3" data-controller="select-filter">
    <div class="form-floating">
      <input type="text" class="form-control" placeholder="Payment Category" id="<%= category_input_id %>" data-select-filter-target="input" data-action="input->select-filter#filter keydown->select-filter#handleKeydown focus->select-filter#openDropdown blur->select-filter#closeDropdown" />
      <%= form.collection_select :category_id, @categories, :id, :name, { include_blank: true }, { class: "form-select d-none", id: "#{category_input_id}_select", data: { select_filter_target: "select", action: "change->select-filter#syncInput" } } %>
      <%= form.label :category_id, "Payment Category", for: category_input_id %>
    </div>
  </div>

  <div class="input-group mb-3">
    <span class="input-group-text">$</span>
    <div class="form-floating">
      <%= form.text_field :balance_dollars, class: 'form-control', placeholder: "Current Balance", data: { type: 'number', controller: 'number-input', action: 'blur->number-input#format' } %>
      <%= form.label :balance_dollars, "Current Balance" %>
    </div>
  </div>

  <div class="input-group mb-3">
    <span class="input-group-text">%</span>
    <div class="form-floating">
      <%= form.text_field :apr, class: 'form-control', placeholder: "Interest Rate (APR)", data: { type: 'number', controller: 'number-input', action: 'blur->number-input#format' } %>
      <%= form.label :apr, "Interest Rate (APR)" %>
    </div>
  </div>

  <div class="form-group text-end">
    <button type="button" class="btn btn-secondary mt-3" onclick="history.back()">
      <i class="bi bi-arrow-left"></i> Back
    </button>
    <button type="submit" class="btn btn-primary mt-3">
      <i class="bi bi-check-lg"></i> <%= @loan.persisted? ? "Update" : "Create" %>
    </button>
  </div>
<% end %>
