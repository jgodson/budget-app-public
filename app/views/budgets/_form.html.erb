<div class="card-body">
  <%= form_with model: @budget, local: true, html: { class: 'form-horizontal', onsubmit: 'BudgetApp.processNumberInputs(event)' } do |form| %>
    <div class="mb-3">
      <%= form.label :category_id, class: 'form-label' %>
      <%= form.collection_select :category_id, @categories, :id, :name, { prompt: "Choose a category" }, { class: 'form-select' } %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :year, class: 'form-label' %>
      <%= form.text_field :year, class: "form-control datepicker-year" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :month, "Month (optional)", class: 'form-label' %>
      <%= form.text_field :month, class: "form-control datepicker-month" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :budgeted_amount_dollars, "Budgeted Amount", class: 'form-label' %>
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">$</span>
        </div>
      <%= form.text_field :budgeted_amount_dollars, class: 'form-control', data: { type: 'number' }, onblur: "BudgetApp.formatNumberInput(this)" %>
      </div>
    </div>
    
    <div class="form-group text-end">
      <button class="btn btn-secondary" onclick="history.back()">Back</button>
      <%= form.submit(@budget.persisted? ? "Update" : "Create", class: 'btn btn-primary') %>
    </div>
  <% end %>
</div>