<div class="card-body">
  <%= form_with model: @budget, local: true, html: { class: 'form-horizontal', data: { controller: 'form budget-suggestions', action: 'submit->form#submit' } } do |form| %>
    <div class="form-floating mb-3">
      <%= form.collection_select :category_id, @categories, :id, :name, { prompt: "Choose a category" }, { class: 'form-select', placeholder: "Category", data: { action: "change->budget-suggestions#fetchAverage", budget_suggestions_target: "categorySelect" } } %>
      <%= form.label :category_id, "Category" %>
    </div>

    <div class="form-floating mb-3">
      <%= form.text_field :year, class: "form-control", placeholder: "Year", data: { controller: "datepicker", datepicker_type_value: "year" } %>
      <%= form.label :year, "Year" %>
    </div>

    <div class="form-group mb-3" data-controller="budget-form">
      <div class="form-check">
        <%= check_box_tag "yearly_budget", "1", @budget.month.nil?, id: "yearly_budget_checkbox", class: "form-check-input", data: { budget_form_target: "yearly", action: "change->budget-form#toggleYearly" } %>
        <%= label_tag "yearly_budget_checkbox", "Yearly Budget", class: "form-check-label fw-bold" %>
      </div>
      <div class="form-text mt-0 mb-3 ms-4">Existing monthly overrides will still apply.</div>

      <div class="fw-bold mb-2">Select specific months for overrides</div>
      <div class="d-flex flex-wrap ms-4">
        <% (1..12).each do |month_num| %>
          <% is_checked = @budget.month == month_num || (@related_months&.include?(month_num)) %>
          <div class="form-check me-3 mb-2">
            <%= check_box_tag "budget[months][]", month_num, is_checked, id: "budget_month_#{month_num}", class: "form-check-input", data: { budget_form_target: "month", action: "change->budget-form#toggleMonth" } %>
            <%= label_tag "budget_month_#{month_num}", Date::MONTHNAMES[month_num], class: "form-check-label" %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="mb-3">
      <div class="input-group">
        <span class="input-group-text">$</span>
        <div class="form-floating">
          <%= form.text_field :budgeted_amount_dollars, class: 'form-control', placeholder: "Budgeted Amount", data: { type: 'number', controller: 'number-input', action: 'blur->number-input#format', budget_suggestions_target: "amountInput" } %>
          <%= form.label :budgeted_amount_dollars, "Budgeted Amount" %>
        </div>
      </div>
      <div class="form-text d-none" data-budget-suggestions-target="suggestionText">
        Average monthly amount (last 12 months): <a href="#" class="text-decoration-none" data-action="click->budget-suggestions#useSuggestion"><span data-budget-suggestions-target="averageAmount"></span></a>
      </div>
    </div>
    
    <div class="form-group text-end">
      <button type="button" class="btn btn-secondary" onclick="history.back()">
        <i class="bi bi-arrow-left me-1"></i>Back
      </button>
      <%= form.button class: 'btn btn-primary' do %>
        <i class="bi bi-check-lg me-1"></i><%= @budget.persisted? ? "Update" : "Create" %>
      <% end %>
    </div>
  <% end %>
</div>