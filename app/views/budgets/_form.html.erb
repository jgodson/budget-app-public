<div class="card-body">
  <%= form_with model: @budget, local: true, html: { class: 'form-horizontal', data: { controller: 'form', action: 'submit->form#submit' } } do |form| %>
    <div class="mb-3">
      <%= form.label :category_id, class: 'form-label' %>
      <%= form.collection_select :category_id, @categories, :id, :name, { prompt: "Choose a category" }, { class: 'form-select' } %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :year, class: 'form-label' %>
      <%= form.text_field :year, class: "form-control", data: { controller: "datepicker", datepicker_type_value: "year" } %>
    </div>

    <div class="form-group mb-3" data-controller="budget-form">
      <div class="form-check">
        <%= check_box_tag "yearly_budget", "1", @budget.month.nil?, id: "yearly_budget_checkbox", class: "form-check-input", data: { budget_form_target: "yearly", action: "change->budget-form#toggleYearly" } %>
        <%= label_tag "yearly_budget_checkbox", "Yearly Budget", class: "form-check-label fw-bold" %>
      </div>
      <div class="form-text mt-0 mb-3 ms-4">Existing monthly overrides will still apply.</div>

      <div class="fw-bold mb-2">Select specific months for overrides</div>
      <div class="d-flex flex-wrap ms-4">
        <% (1..12).each do |month_num| %>
          <% is_checked = @budget.month == month_num || (@related_months&.include?(month_num)) %>
          <div class="form-check me-3 mb-2">
            <%= check_box_tag "budget[months][]", month_num, is_checked, id: "budget_month_#{month_num}", class: "form-check-input", data: { budget_form_target: "month", action: "change->budget-form#toggleMonth" } %>
            <%= label_tag "budget_month_#{month_num}", Date::MONTHNAMES[month_num], class: "form-check-label" %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="form-group mb-3">
      <%= form.label :budgeted_amount_dollars, "Budgeted Amount", class: 'form-label' %>
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">$</span>
        </div>
      <%= form.text_field :budgeted_amount_dollars, class: 'form-control', data: { type: 'number', controller: 'number-input', action: 'blur->number-input#format' } %>
      </div>
    </div>
    
    <div class="form-group text-end">
      <button type="button" class="btn btn-secondary" onclick="history.back()">Back</button>
      <%= form.submit(@budget.persisted? ? "Update" : "Create", class: 'btn btn-primary') %>
    </div>
  <% end %>
</div>